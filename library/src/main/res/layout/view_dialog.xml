<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog_circle_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_33"
        android:text="标题"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="15dp"
        android:textColor="@color/gray_66"
        android:text="描描述描述描述描述描述描述描述描述描述述"
        android:textSize="15sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/gray_db" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dialog_buttom1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_transparent_bg"
            android:gravity="center"
            android:textColor="@color/line_blue"
            android:textSize="15sp" />

        <View
            android:id="@+id/line_dialog_control"
            android:layout_width="@dimen/line_height"
            android:layout_height="fill_parent"
            android:background="@color/gray_db" />

        <TextView
            android:id="@+id/tv_dialog_buttom2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_transparent_bg"
            android:gravity="center"
            android:textColor="@color/gray_66"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>